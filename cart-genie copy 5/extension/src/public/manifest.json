{
    "manifest_version": 3,
    "name": "Shopping Helper",
    "version": "1.0",
    "description": "Adds items to your shopping cart.",
    "permissions": [
        "activeTab",
        "storage",
        "tabs"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.barbora.lt/*"
            ],
            "js": [
                "content_script.js"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.svg",
            "48": "images/icon48.svg",
            "128": "images/icon128.svg"
        }
    }
}