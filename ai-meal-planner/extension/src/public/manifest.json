{
    "manifest_version": 3,
    "name": "Shopping Helper",
    "version": "1.0",
    "description": "Adds items to your shopping cart.",
    "permissions": [
        "activeTab",
        "storage",
        "tabs"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.barbora.lt/*",
                "http://127.0.0.1:5000/*",
                "http://localhost:5000/*",
                "http://127.0.0.1:8008/*",
                "http://localhost:8008/*",
                "http://127.0.0.1:3000/*",
                "http://localhost:3000/*"
            ],
            "js": [
                "content_script.js"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "images/icon16.svg",
        "48": "images/icon48.svg",
        "128": "images/icon128.svg"
    },
    "externally_connectable": {
        "matches": [
            "http://127.0.0.1:5000/*",
            "http://localhost:5000/*",
            "http://127.0.0.1:8008/*",
            "http://localhost:8008/*",
            "http://127.0.0.1:3000/*",
            "http://localhost:3000/*"
        ]
    }
}